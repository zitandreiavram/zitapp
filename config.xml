<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "com.phonegap.zitapp"
        versionCode="10"
        version = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Zit App Mobile</name>

    <description>
        Zit App Mobile
    </description>

    <author href="https//www.zit.ro" email="office@zit.ro">
        ZIT SRL
    </author>
    
    <preference name="phonegap-version" value="2.0.0" />
	
	
	
	<!-- iOS Specific -->
	<preference name="fullscreen" value="true" />
	<preference name="exit-on-suspend" value="true" />
	<preference name="show-splash-screen-spinner" value="false" />
	
	
	
	<icon src="images/icons/icon.png" />
	<!-- icons ios -->
	<icon src="images/icons/icon-57-57.png" width="57" height="57" />
	<icon src="images/icons/icon-72-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="images/icons/icon-114-114.png" width="114" height="114" />
	<!-- icons android -->
	<icon src="images/icons/icon-36-36.png" gap:platform="android" gap:density="ldpi" />
	<icon src="images/icons/icon-48-48.png" gap:platform="android" gap:density="mdpi" />
	<icon src="images/icons/icon-72-72.png" gap:platform="android" gap:density="hdpi" />
	<icon src="images/icons/icon-96-96.png" gap:platform="android" gap:density="xhdpi" />
	
	<gap:splash src="images/splash/splash.png" />
	<!-- splash ios -->
	<gap:splash src="images/splash/splash-320-480.png" width="320" height="480" />
	<gap:splash src="images/splash/splash-640-480.png" width="640" height="960" />
	<gap:splash src="images/splash/ios/Default_iphone5.png" width="640" height="1136" />
	<gap:splash src="images/splash/ios/Default-Landscape.png" width="1024" height="768" />
	<gap:splash src="images/splash/ios/Default-Portrait.png" width="768" height="1024" />
	<!-- splash android -->
	
	<!-- If you do not want any permissions to be added to your app, add the
		following tag to your config.xml; you will still have the INTERNET
		permission on your app, which PhoneGap requires. -->
	<preference name="permissions" value="none"/>
	
</widget>